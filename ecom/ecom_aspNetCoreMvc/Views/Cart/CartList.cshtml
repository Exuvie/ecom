
@{
    ViewData["Title"] = "CartList";
}

@model List<Cart>

<section id="admin" class="m-4">
    <div class="container">
        <div class="text-center">
            <h4>Section Administrateur</h4>
        </div>
        <div class="">
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a asp-controller="Category" asp-action="CategoryAdmin" class="nav-link">Gestion des catégories</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Article" asp-action="ArticleAdmin" class="nav-link">Gestion des articles</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="User" asp-action="UserList" class="nav-link">Gestion des utilisateurs</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Cart" asp-action="CartList" class="nav-link">Gestion des paniers</a>
                </li>
            </ul>
        </div>

    </div>
</section>

<section>
    <div class="container">
        <div class="card">
            <div class="card-header text-center">
                <h6>Liste des paniers</h6>
            </div>
            <div class="card-body text-center">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Identifiant</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Total €</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Cart c in Model)
                        {
                            <tr>
                                <th scope="col">@c.Id</th>
                                <th scope="col">@c.User.LastName</th>
                                <th scope="col">@c.User.FirstName</th>
                                <th scope="col">@c.Total €</th>
                                <th scope="col"><a class="btn btn-outline-info" asp-controller="Cart" asp-action="CartDetail" asp-route-id="@c.Id">Detail</a></th>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>



