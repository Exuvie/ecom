@model List<User>;

<section id="admin" class="m-4">
    <div class="container">
        <div class="text-center">
            <h4>Section Administrateur</h4>
        </div>
        <div class="">
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a asp-controller="Category" asp-action="CategoryAdmin" class="nav-link">Gestion des catégories</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Article" asp-action="" class="nav-link">Ajouter un article</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Article" asp-action="" class="nav-link">Liste des articles</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="User" asp-action="UserList" class="nav-link">Liste des utilisateurs</a>
                </li>
            </ul>
        </div>

    </div>
</section>

<section id="userList" class="m-4">
    <div class="container">
        <div class="card">
            <div class="card-header text-center">
                <h6>Liste des utilisateurs</h6>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead class="text-center">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Pseudo</th>
                            <th scope="col">Téléphone</th>
                            <th scope="col">Email</th>
                            <th scope="col">Adresse</th>
                            <th scope="col">CP</th>
                            <th scope="col">Ville</th>
                            <th scope="col">Supprimer</th>
                        </tr>
                    </thead>
                    <tbody class="text-center">
                        @foreach (User u in Model)
                        {
                            <tr>
                                <td>@u.Id</td>
                                <td>@u.LastName</td>
                                <td>@u.FirstName</td>
                                <td>@u.UserName</td>
                                <td>@u.Phone</td>
                                <td>@u.Email</td>
                                <td>@u.Address</td>
                                <td>@u.Zip</td>
                                <td>@u.City</td>
                                <td>
                                    <a asp-controller="User" asp-action="UserDelete" asp-route-id="@u.Id">X</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

